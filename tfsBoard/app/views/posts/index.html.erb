<% if params["bulletin_id"] %><!--:bulletin_id값이 들어왔을 경우-->
  <%= render "posts/post_types/#{@bulletin.post_type}" %><!--partial 템플릿 파일을 인수로 받아 렌더링 결과를 삽입. post_type에 맞는 뷰딴을 띄워줄것이다.-->
<% else %>
  <% if params[:tag] %><!--:tag값이 들어왔을 경우-->
  <h2>Posts tagged with "<%= params[:tag] %>" <small>( <%= @posts.size %> )</small></h2>
  <% else %>
  <h2>All Posts <small>( <%= @posts.size %> )</small></h2>
  <% end %>
  <ul id='posts_tagged'>
    <%= render @posts %>
  </ul>
<% end %>


