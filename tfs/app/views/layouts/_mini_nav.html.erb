<!-- 미니 네비게이션 JS 김수겸 14.09.01 -->
<script type="text/javascript">
	var eventClientX;
	$(function() {
		$("div").mousemove(function(event) {
			eventClientX = event.clientX;
			if (eventClientX == 0) {
				/*eventInterval = setTimeout("$(function(){$('#mini_nav_toggle').show('slide',{direction:'left'},500)})", 500);*/
				$(function() {
					$('#mini_nav_toggle').show('slide', {
						direction : 'left'
					}, 200)
				});
				return;
			}
		});

		$("#mini_nav_toggle").mouseleave(function() {
			$(this).hide('slide', {
				direction : 'left'
			}, 200)
		});
	}); 
</script>
<!-- 미니 네비게이션 JS end -->
