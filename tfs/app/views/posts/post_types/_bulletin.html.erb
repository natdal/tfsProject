    <% @posts.each do |post| %><!--리시버의 각 요소를 하나씩 반복해서 post로 넘겨 준다-->
      <tr>
        <td><%= post.title %> <small>( <%= post.comments.size %> )</small></td>
        <td>
          <%= link_to 'Show', [post.bulletin, post], class:'btn btn-default' %><!--post의 bulletin 외례키와 post의 값을 파라미터로 넘겨줌-->
          <%= link_to 'Edit', edit_bulletin_post_path(post.bulletin, post), class:'btn btn-default' %> <!--rake routes를 보면 prefix참조할 수 있다-->
          <%= link_to 'Destroy', [post.bulletin, post], method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

