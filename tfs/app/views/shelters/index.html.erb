<h1>Listing shelters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Introduce</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shelters.each do |shelter| %>
      <tr>
        <td><%= shelter.name %></td>
        <td><%= shelter.introduce %></td>
        <td><%= shelter.cooridnate.lat %></td>
        <td><%= shelter.cooridnate.lon %></td>
        <td><%= link_to 'Show', shelter %></td>
        <td><%= link_to 'Edit', edit_shelter_path(shelter) %></td>
        <td><%= link_to 'Destroy', shelter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shelter', new_shelter_path %>
