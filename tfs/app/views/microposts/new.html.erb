<!-- 블로그 리스트 김수겸 14.09.19 -->
<div class="content_re">
  <div class="row">
    <!-- blog side 김수겸 14.09.19 -->
    <div class="col-lg-2">
      <div class="left_wrap">
        <!--profile 김수겸 14.09.18-->
        <div class="row">
          <div class="col-lg-12">
<%= render 'profile/profile'%>
          </div>
        </div>
        <!--profile end-->

        <!--blog_map js 김수겸 14.09.16-->
        <script>
          $(function() {
            var state = true;
            $("#spread_btn").click(function() {
              if (state) {
                $("#map_div").animate({
                  height : 300
                }, 500);
              } else {
                $("#map_div").animate({
                  height : 200
                }, 500);
              }
              state = !state;
            });
          });
        </script>
        <!--blog_map js end-->

        <!--blgo_map 김수겸 14.09.18-->
        <div class="row">
          <div class="col-lg-12">
            <div id="map_div" class="blog_map">
              <span class="spread_btn"><i id="spread_btn"class="fa fa-plus-square-o"></i></span>
            </div>
          </div>
        </div>
        <!--blog_map end-->

        <!--blog_category 김수겸 14.09.18-->
        <div class="row">
          <div class="col-lg-12">
            <div class="blog_category">
              <ul class="list-group">
                <li class="list-group-item btn btn-default">
                  전체<i class="fa fa-chevron-left" style="float:right; margin-top:7px;"></i>
                </li>
                <li class="list-group-item btn btn-default">
                  내일상<i class="fa fa-chevron-left" style="float:right; margin-top:7px;"></i>
                </li>
                <li class="list-group-item btn btn-default">
                  요리<i class="fa fa-chevron-left" style="float:right; margin-top:7px;"></i>
                </li>
                <li class="list-group-item btn btn-default">
                  맛집<i class="fa fa-chevron-left" style="float:right; margin-top:7px;"></i>
                </li>
                <li class="list-group-item btn btn-default">
                  여행<i class="fa fa-chevron-left" style="float:right; margin-top:7px;"></i>
                </li>
                <li class="list-group-item btn btn-default">
                  쇼핑<i class="fa fa-chevron-left" style="float:right; margin-top:7px;"></i>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <!--blog_category end-->
      </div>
    </div>
    <!-- blog side end -->

    <!--blog_list_wrap 김수겸 14.09.19-->
    <div class="col-lg-10">
      <div class="right_wrap">
        <div class="row">
          <div class="col-lg-12">
            <%= form_for(@micropost, html: { multipart: true }) do |f| %>

            <%= render 'shared/error_messages', object: f.object %>
            
           <%= f.text_area :content,class:"form-control wmd-input",rows:"10", placeholder: "Compose new micropost..." %>

            <div class="fileupload fileupload-new" data-provides="fileupload">
              <div class="fileupload-preview thumbnail" style="width: 200px; height: 150px;"></div>
              <div>
                <span class="btn btn-file btn-success"><span class="fileupload-new">이미지선택</span><span class="fileupload-exists">수정</span><%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %></span>
                <a href="#" class="btn btn-danger fileupload-exists" data-dismiss="fileupload">삭제</a>
              </div>
            </div>
            <%= f.submit "Post", class: "btn btn-primary" %>
            <% end %>

            <script type="text/javascript">
              $('#micropost_picture').bind('change', function() {
                size_in_megabytes = this.files[0].size / 1024 / 1024;
                if (size_in_megabytes > 5) {
                  alert('Maximum file size is 5MB. Please choose a smaller file.');
                }
              });
            </script>

          </div>
        </div>
      </div>
    </div>
    <!--blog_list_wrap end-->
  </div>
</div>
<!-- 블로그 리스트 end -->s

